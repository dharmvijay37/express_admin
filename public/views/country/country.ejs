<% include ./../layout/header.ejs %>
<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <% include ./../layout/partials/page-header-section.ejs %>
    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">Add Country</h3>

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
              <i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fa fa-times"></i></button>
          </div>
        </div>
        <div class="box-body">
          <form action="/admin/country" id="editCountryForm" method="post">
            <div class="row">
              <!-- /.col -->

              <% include ./../layout/partials/alert-section.ejs %>

              <div class="col-xs-3">
                <div class="form-group has-feedback">
                  <input type="hidden" name="id" id="id">
                  <input type="text" name="name" id="name" class="form-control" placeholder="Country Name">
                  <span class="glyphicon glyphicon-flag form-control-feedback"></span>
                </div>
              </div>
              <div class="col-xs-3">
                <div class="form-group has-feedback">
                  <input type="text" name="nationality" class="form-control" placeholder="Country Nationality">
                  <span class="glyphicon glyphicon-flag form-control-feedback"></span>
                </div>
              </div>
              <div class="col-xs-3">
                <div class="form-group has-feedback">
                  <input type="text" name="isoCode" class="form-control" placeholder="Country isoCode">
                  <span class="glyphicon glyphicon-flag form-control-feedback"></span>
                </div>
              </div>
              <div class="col-xs-1">
                <div class="form-check">
                  <input type="checkbox" name="status" class="form-check-input" id="exampleCheck1" style="vertical-align: -webkit-baseline-middle;" <%= typeof responseData==='object' && responseData.status===1 ? "checked":"" %>>
                  <span class="form-check-label" for="exampleCheck1" style="vertical-align: -webkit-baseline-middle;">Status</span>
                </div>
              </div>
              <div class="col-xs-2">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Submit</button>
              </div>
              <!-- /.col -->
            </div>
          </form>
        </div>
        <!-- /.box-body -->
        <div class="box-footer text-center">
        </div>
        <!-- /.box-footer-->
      </div>
      <!-- /.box -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
<% include ./../layout/footer.ejs %>
<script type="text/javascript" src="/js/country.js"></script>

</body>
</html>
